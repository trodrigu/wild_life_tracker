.row
  .col-md-6.col-md-offset-3
    = form_for [@species, @species.sightings.build] do |f|
      = f.label :latitude
      = f.number_field :latitude, step: 'any'

      = f.label :longitude, step: 'any'
      = f.number_field :longitude

      = f.label :date
      = f.datetime_select :date

      = f.submit 'Submit'
